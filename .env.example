# To separate your traces from other application
LANGSMITH_API_KEY=
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_PROJECT=""
LANGSMITH_TRACING=true

# Provider keys
OPENAI_API_KEY=
TAVILY_API_KEY=
ANTHROPIC_API_KEY=

# Set working enviornment (production = postgres or development = sqlite)
ENVIRONMENT=production

# Set database directories
DATABASE_URL="sqlite:///./workspace/assistant.db"
POSTGRES_URL="postgresql://mortey:SecurePass123@localhost:5432/mortey_db"

# Add explicit model pre-initialization flag
LLM_PRELOAD_MODELS=true

# Add health check configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_RECOVERY_THRESHOLD=0.40

# Ensure PostgreSQL connection settings are correct
POSTGRES_MAX_CONNECTIONS=10
POSTGRES_CONNECTION_TIMEOUT=30

# Unused
# PICOVOICE_ACCESS_KEY=
